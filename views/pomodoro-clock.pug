doctype html
html
    head
        title Pomodoro Clock

        meta(charset="UTF-8") 
        meta(name="viewport", content="width=device-width, initial-scale=1")

        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Ubuntu")
        
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css")        
        link(rel="stylesheet", href="dist/css/pomodoro-clock.css")
        
        script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(type="text/javascript", src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    body
        section.vertical-center.full-height.text-center
            .container-fluid
                .row
                    .col-xs-12
                        h1 Pomodoro Clock
                .row
                    .col-xs-6
                        div#configBreak
                            button#minusBreakMinutes -
                            span#breakMinutes
                            button#plusBreakMinutes +
                    .col-xs-6
                        div#configSession    
                            button#minusSessionMinutes -
                            span#sessionMinutes
                            button#plusSessionMinutes +
                .row
                    .col-xs-12
                        div#display
                            h2#presentState
                            span.hide#breakDisplay 
                            span#sessionDisplay
                        div#controls
                            button#start start 
                            button#pauseResume pause / resume
                            button#term terminate
        script(type="text/javascript", src="dist/js/pc.js")
        script(type="text/javascript", src="dist/js/pomodoro-clock.js")
        
        